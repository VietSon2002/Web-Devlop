@model SV20T1020242.Web.Models.CategorySearchResult
@{
    ViewBag.Title = "Quản lý danh mục";
}
<div class="box box-primary">
    <div class="box-body">
        @* Form timf kiem *@
        <form id="formSearch" action="#">
            <div class="input-group">
                <input name="searchValue" type="text" class="form-control"
                       placeholder="Nhập tên danh mục" />

                <div class="input-group-btn">
                    <button class="btn btn-info" type="submit" style="margin-right:10px">
                        <i class="glyphicon glyphicon-search"></i>
                    </button>
                    <a href="~/Category/Create" class="btn btn-primary">
                        <i class="fa fa-plus"></i>
                        Bổ sung
                    </a>
                </div>

            </div>
        </form>
        <div>
            <p style="margin:10px 0 10px 0">
                Có <strong>@Model.RowCount</strong> danh mục trong <strong>@Model.PageCount</strong>  trang
            </p>
            <div class="table-resonsive">
                <table class="table table-bordered table-hover table-striped">
                    <thead>
                        <tr class="bg-primary">
                            <th>Tên danh mục</th>
                            <th>Mô tả</th>
                            <th style="width:200px"></th>
                        </tr>
                    </thead>
                    @foreach (var item in Model.Data)
                    {
                        <tbody>
                            <tr>
                                <td>@item.CategoryName</td>
                                <td>@item.Description</td>

                                <td class="text-right">
                                    <a href="~/Category/Edit/@item.CategoryID" class="btn btn-xs btn-info">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                    <a href="~/Category/Delete/@item.CategoryID" class="btn btn-xs btn-danger">
                                        <i class="fa fa-remove"></i>
                                    </a>
                                </td>
                            </tr>
                        </tbody>
                    }
                    @*    @for (int i = 1; i <= 10; i++)
                    {
                    <tbody>
                    <tr>
                    <td>Danh mục 1</td>
                    <td>Bán gì?</td>

                    <td class="text-right">
                    <a href="~/Category/Edit/123" class="btn btn-xs btn-info">
                    <i class="fa fa-edit"></i>
                    </a>
                    <a href="~/Category/Delete/123" class="btn btn-xs btn-danger">
                    <i class="fa fa-remove"></i>
                    </a>
                    </td>
                    </tr>
                    </tbody>
                    } *@

                </table>
            </div>
            <div class="text-center">
                <ul class="pagination">
                    @for (int p = 1; p <= Model.PageCount; p++)
                    {
                        if (Model.Page == p)
                        {
                            <li class="active"><a href="#">@p</a></li>
                        }
                        else
                        {
                            <li><a href="~/Category?page=@p&searchValue=@Model.SearchValue">@p</a></li>
                        }
                    }
                    @*   <li><a href="#">1</a></li>
                    <li class="active"><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#">4</a></li>
                    <li><a href="#">5</a></li> *@
                </ul>
            </div>
        </div>

    </div>

</div>