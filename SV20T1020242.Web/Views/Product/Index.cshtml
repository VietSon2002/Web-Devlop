@model SV20T1020242.Web.Models.ProductSearchResult
@{
    ViewBag.Title = "Quản lý mặt hàng";
    int rowCount = 0;
}
<div class="box box-primary">
    <div class="box-body">
        @* Form tim kiem *@
        <form id="formSearch" action="#">
            <div class="row" style="margin-right:0px">
                <div class="col-sm-3">
                    <select class="form-control" name="category">
                        <option>-- Tất cả loại hàng --</option>

                        @foreach (var item in SV20T1020242.BusinessLayers.CommonDataService.ListOfCategories(out rowCount, 1, 0, ""))
                        {
                            <option value="@item.CategoryID">@item.CategoryName</option>
                        }

                    </select>
                </div>
                <div class="col-sm-3">
                    <select class="form-control" name="supplier">
                        <option>-- Tất cả nhà cung cấp --</option>
                        @foreach (var item in SV20T1020242.BusinessLayers.CommonDataService.ListOfSuppliers(out rowCount, 1, 0, ""))
                        {
                            <option value="@item.SupplierID">@item.SupplierName</option>
                        }
                    </select>
                </div>
                <div class="col-sm-6 input-group">
                    <input name="searchValue" type="text" class="form-control"
                           placeholder="Nhập tên mặt hàng cần tìm" />

                    <div class="input-group-btn">
                        <button class="btn btn-info" type="submit" style="margin-right:10px">
                            <i class="glyphicon glyphicon-search"></i>
                        </button>
                        <a href="~/Product/Create" class="btn btn-primary">
                            <i class="fa fa-plus"></i>
                            Bổ sung
                        </a>
                    </div>
                </div>
            </div>

        </form>
        <div>
            <p style="margin:10px 0 10px 0">
                Có <strong>@Model.RowCount</strong> mặt hàng trong <strong>@Model.PageCount</strong>  trang
            </p>
            <div class="table-resonsive">
                <table class="table table-bordered table-hover table-striped">
                    <thead>
                        <tr class="bg-primary">
                            <th>Ảnh</th>
                            <th>Tên mặt hàng</th>
                            <th>Đơn bị tính</th>
                            <th>Giá</th>
                            <th>Ngừng bán?</th>
                            <th style="width:80px"></th>
                        </tr>
                    </thead>
                    @foreach (var item in Model.Data)
                    {
                        <tbody>
                            <tr>
                                <td>
                                    <img style="width:80px" src="~/images/products/@item.Photo" alt="Ảnh" />
                                </td>
                                <td>
                                    @item.ProductName
                                    <br />
                                    <i>@item.ProductDescription</i>
                                </td>
                                <td>@item.Unit</td>
                                <td>@item.Price</td>
                                <td>@(item.IsSelling ? "" : "✔")</td>
                                <td class="text-right">
                                    <a href="~/Product/Edit/@item.ProductID" class="btn btn-xs btn-info">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                    <a href="~/Product/Delete/@item.ProductID" class="btn btn-xs btn-danger">
                                        <i class="fa fa-remove"></i>
                                    </a>
                                </td>
                            </tr>
                        </tbody>
                    }

                </table>
            </div>
            <div class="text-center">
                <ul class="pagination">
                    @for (int p = 1; p <= Model.PageCount; p++)
                    {
                        if (Model.Page == p)
                        {
                            <li class="active"><a href="#">@p</a></li>
                        }
                        else
                        {
                            <li><a href="~/Product?page=@p&searchValue=@Model.SearchValue">@p</a></li>
                        }
                    }
                </ul>
            </div>
        </div>

    </div>

</div>